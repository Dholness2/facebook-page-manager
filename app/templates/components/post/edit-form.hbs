{{#paper-card as |card|}}
  {{#card.content}}
    {{#paper-form as |form|}}
      {{form.input label="message" type="email" value=post.message onChange=(action (mut post.message))}}
        {{#paper-button  onClick=(action "save")}}
          Submit
        {{/paper-button}}
      {{/paper-form}}
    {{/card.content}}
{{/paper-card}}
